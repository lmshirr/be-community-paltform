{
    "env": {
        "node": true,
        "commonjs": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": [".eslintrc.json"],
    "rules": {
        "no-console": "off",
        "camelcase":"off",
        "no-param-reassign":"off",
        "no-unused-vars": "warn",
        "func-names": "off",
        "consistent-return": "off",
        "import/order": "off",
        "prefer-arrow-callback": "off",
        "strict": "off",
        "arrow-body-style": "off",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    }
}
